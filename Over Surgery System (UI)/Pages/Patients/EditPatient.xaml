<core:EditorPage
    x:TypeArguments="patients:Patient"
    x:Class="OverSurgerySystem.UI.Pages.Patients.EditPatient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:OverSurgerySystem.UI.Pages.Patients"
    xmlns:core="clr-namespace:OverSurgerySystem.UI.Pages.Core"
    xmlns:patients="clr-namespace:OverSurgerySystem.Core.Patients"
    mc:Ignorable="d" 
    d:DesignHeight="300"
    d:DesignWidth="300"
    Title="EditPatient">

    <Page.Resources>
        <ResourceDictionary Source="pack://application:,,,/Over Surgery System (UI);component/Styles/EditItemStyles.xaml"/>
    </Page.Resources>

    <StackPanel
        VerticalAlignment   = "Center"
        HorizontalAlignment = "Center">
        <StackPanel
            Orientation         = "Horizontal"
            HorizontalAlignment = "Right">
            <TextBlock Text="Patient ID:"/>
            <TextBox Name="PatientIdBox"/>
        </StackPanel>

        <Frame Name="DetailsEditor" HorizontalAlignment="Right" Focusable="False"/>
    </StackPanel>
</core:EditorPage>
