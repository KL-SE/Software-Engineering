<Window x:Class="OverSurgerySystem.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverSurgerySystem.UI"
        mc:Ignorable    = "d"
        Title           = "MainWindow"
        Width           = "975"
        Height          = "580">
    <Grid>
        <Grid.LayoutTransform>
            <ScaleTransform ScaleX="0.5" ScaleY="0.5" CenterX=".5" CenterY=".5" />
        </Grid.LayoutTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Frame Source="Persistent/MenuBanner.xaml" Grid.Row="0"/>
        <Frame Source="Pages/LoginPage.xaml" Grid.Row="1"/>
    </Grid>
</Window>
